# ==============================================
# UEMS Environment Configuration
# ==============================================

# ----- Application -----
NODE_ENV=development
APP_NAME=UEMS
APP_VERSION=1.0.0

# ----- Backend API -----
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
API_PREFIX=api/v1

# ----- Frontend -----
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# ----- Database (PostgreSQL) -----
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=uems_user
POSTGRES_PASSWORD=uems_secure_password_change_in_production
POSTGRES_DB=uems_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# ----- JWT Authentication -----
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRATION=7d

# ----- Security -----
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ----- NextCloud Integration -----
NEXTCLOUD_URL=http://nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin_secure_password_change_in_production
NEXTCLOUD_WEBDAV_URL=http://nextcloud/remote.php/dav
NEXTCLOUD_OCS_URL=http://nextcloud/ocs/v1.php

# NextCloud Database (separate from UEMS)
NEXTCLOUD_DB_HOST=nextcloud-db
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=nextcloud_secure_password
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_TYPE=pgsql

# ----- File Upload -----
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png

# ----- Email (Optional - for future notifications) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@uems.com

# ----- Logging -----
LOG_LEVEL=info
LOG_DIR=./logs

# ----- Redis (Optional - for caching/sessions) -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----- Nginx -----
NGINX_PORT=80
NGINX_SSL_PORT=443

# ----- Default Admin User -----
DEFAULT_ADMIN_EMAIL=admin@uems.com
DEFAULT_ADMIN_PASSWORD=Admin@123456
DEFAULT_ADMIN_FIRSTNAME=System
DEFAULT_ADMIN_LASTNAME=Administrator

# ----- Performance -----
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# ----- Feature Flags -----
ENABLE_CV_PARSING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUDIT_LOGGING=true
